<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.kristoprifti.android.youtubeplayer.MainActivity">

    <Button
        android:text="@string/play_a_single_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlaySingle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <Button
        android:text="@string/standalone_sub_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStandalone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPlaySingle"
        app:layout_constraintLeft_toLeftOf="@+id/btnPlaySingle"/>
</android.support.constraint.ConstraintLayout>
